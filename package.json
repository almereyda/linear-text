  "bugs": "https://github.com/oidoid/linear-text/issues",
  "type": "module",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "tsc --noEmit && npm run test:unit && npm run test:format && npm run build",
    "test:unit": "react-scripts test --watchAll=false",
    "test:format": "npm run formatter -- -l",
    "format": "npm run formatter -- -w",
    "formatter": "prettier './**/*.{css,html,json,md,ts,tsx}'",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "version": "npm ci && npm t",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin \"$(git tag --points-at @)\""
  },
  "engines": {
    "node": "16.6.1",
    "npm": "7.20.3"
  },
  "devDependencies": {
    "@lingui/cli": "3.10.2",
    "@lingui/detect-locale": "3.10.4",
    "@lingui/macro": "3.10.2",
    "@lingui/react": "3.10.2",
    "@reduxjs/toolkit": "1.6.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.13",
    "@types/react": "17.0.16",
    "@types/react-dom": "17.0.9",
    "@types/react-redux": "7.1.18",
    "browser-fs-access": "0.20.1",
    "pre-commit": "1.2.2",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.4",
    "react-scripts": "4.0.3",
    "redux-undo": "1.0.1",
    "typescript": "4.4.0-beta",
    "web-vitals": "2.1.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!browser-fs-access)"
    ]
