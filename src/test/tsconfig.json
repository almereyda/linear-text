// TypeScript config for test code under src/**/*.test.ts and src/test/**/*
// except elements.
{
  "extends": "../../tools/base-tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2023"],

    // tsc is only used for type-checking.
    "noEmit": true,

    "rootDir": "..",

    // Hack around Chai typing.
    "skipLibCheck": true
  },
  "include": ["**/*", "../**/*.test.ts"],
  "exclude": ["../elements/**/*.test.ts"],
  "references": [{"path": ".."}]
}
